<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout" xmlns:ob="sap.uxap"
	xmlns:form="sap.ui.layout.form">
	<Dialog title="User Settings" titleAlignment="Center" contentWidth="58rem" verticalScrolling="false" draggable="true" resizable= "true" >
		<SplitApp initialDetail="_themes" initialMaster="master" id="splitApp">
			<detailPages>			
				<ob:ObjectPageLayout id="_themes" showTitleInHeaderContent="true" upperCaseAnchorBar="false">
					<ob:headerTitle>
						<ob:ObjectPageHeader objectTitle="{SETTINGDATA>title}" isActionAreaAlwaysVisible="false" markFlagged="true"
							objectSubtitle="{SETTINGDATA>desc}" objectImageURI="{imageModel>/path}{SETTINGDATA>image}" objectImageShape="Square"
							isObjectTitleAlwaysVisible="false" isObjectSubtitleAlwaysVisible="false"></ob:ObjectPageHeader>
					</ob:headerTitle>
					<ob:sections>
						<ob:ObjectPageSection titleUppercase="false" title="Manage Theme">
							<ob:subSections>
								<ob:ObjectPageSubSection titleUppercase="false">
									<List id="ThemeList" selectionChange="onThemeSelectionChange" items="{path: 'THEMEDATA>/Themes'}" >
										<items>
											<StandardListItem infoStateInverted="true" type="Active" title="{THEMEDATA>Name}" description="{THEMEDATA>id}" iconDensityAware="{SETTINGDATA>iconDensityAware}"
												info="{THEMEDATA>info}" infoState="Success" iconInset="false" adaptTitleSize="false" press="onPressThemeItem" icon="sap-icon://palette">
											</StandardListItem>
										</items>
									</List>
								</ob:ObjectPageSubSection>
							</ob:subSections>
						</ob:ObjectPageSection>
					</ob:sections>
				</ob:ObjectPageLayout>
				
				<ob:ObjectPageLayout id="_favourites" showTitleInHeaderContent="true" upperCaseAnchorBar="false">
					<ob:headerTitle>
						<ob:ObjectPageHeader  objectTitle="{SETTINGDATA>title}" isActionAreaAlwaysVisible="false" markFlagged="true"
							objectSubtitle="{SETTINGDATA>desc}" objectImageURI="{imageModel>/path}{SETTINGDATA>image}" objectImageShape="Square"
							isObjectTitleAlwaysVisible="false" isObjectSubtitleAlwaysVisible="false"></ob:ObjectPageHeader>
					</ob:headerTitle>
					<ob:sections>
						<ob:ObjectPageSection titleUppercase="false" title="Manage Favourites">
							<ob:subSections>
								<ob:ObjectPageSubSection titleUppercase="false">
									
								</ob:ObjectPageSubSection>
							</ob:subSections>
						</ob:ObjectPageSection>
					</ob:sections>
				</ob:ObjectPageLayout>

				<ob:ObjectPageLayout id="_notifications" showTitleInHeaderContent="true" upperCaseAnchorBar="false">
					<ob:headerTitle>
						<ob:ObjectPageHeader objectTitle="{SETTINGDATA>title}" isActionAreaAlwaysVisible="false" markFlagged="true"
							objectSubtitle="{SETTINGDATA>desc}" objectImageURI="{imageModel>/path}{SETTINGDATA>image}" objectImageShape="Square"
							isObjectTitleAlwaysVisible="false" isObjectSubtitleAlwaysVisible="false"></ob:ObjectPageHeader>
					</ob:headerTitle>
					<ob:sections>
						<ob:ObjectPageSection titleUppercase="false" title="Manage Notifications">
							<ob:subSections>
								<ob:ObjectPageSubSection titleUppercase="false">
									
								</ob:ObjectPageSubSection>
							</ob:subSections>
						</ob:ObjectPageSection>
					</ob:sections>
				</ob:ObjectPageLayout>
			</detailPages>
			<masterPages >
				<Page id="master" showHeader="false" showFooter="true" backgroundDesign="List">
					<List selectionChange="userSettingSelectionChange" items="{ path: 'SETTINGDATA>/settingnames' }" id="userSettingsList" updateFinished="userSettingListUpdateFinished">
						<items>
							<StandardListItem selected="{SETTINGDATA>selected}" infoStateInverted="{SETTINGDATA>infoStateInverted}" type="Active" title="{SETTINGDATA>title}"
								highlight="{SETTINGDATA>highlight}" info="{SETTINGDATA>info}" infoState="{SETTINGDATA>infoState}" description="{SETTINGDATA>desc}"
								iconDensityAware="{SETTINGDATA>iconDensityAware}" iconInset="{SETTINGDATA>iconInset}" adaptTitleSize="{SETTINGDATA>adaptTitleSize}"
								press="onPressUserSettingItems">
								<avatar>
									<Avatar src="{imageModel>/path}{SETTINGDATA>image}" displayShape="Square" imageFitType="Cover" showBorder="true"/>
								</avatar>
							</StandardListItem>
						</items>
					</List>
				</Page>
			</masterPages>
		</SplitApp>
		<!-- <beginButton>
			<Button text="Save" type="Emphasized" press="onSaveSetting"/>
		</beginButton> -->
		<endButton>
			<Button text="Close" type="Ghost" class="customSegmentedBtn" press="onCloseSettingDialog"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>